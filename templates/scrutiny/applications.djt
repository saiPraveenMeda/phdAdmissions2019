{% load staticfiles %}
<!DOCTYPE html>
<html>
<head>
	<title>PhD Admission Form</title>
	<!-- Latest compiled and minified CSS -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

	<!-- jQuery library -->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

	<!-- Latest compiled JavaScript -->
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

	<style type="text/css">
		hr{
			border: none;
    		height: 1px;
    		background-color: black;
		}
	</style>

</head>
<body>

<center><a href="index.php"> <img  src="{% static 'img/HINDI2.png' %}" align="center" style="background-color:white;" height="110px" width="100%px" alt="National Institute of Technology Warangal" title="National Institute of Technology Warangal"/></a></center>

<div class="row" style="background-color:#003A6A; color: white;">
	<center><h2>Applications received so far</h2></center>	
	<br>
</div>
<div class="row" style="margin-top:2%;">
	<div class="col-sm-1 col-sm-offset-10">
		<a href="/register/signout"><button class="btn btn-primary">Logout</button></a>
	</div>
</div>


<div>
	<table class="table table-bordered">
		<thead>
	      <tr style="background-color:#e3e3e3;">
	        <th>S.No.</th>
	        {% if is_dean %}
	        <th>Department</th>
	        {% endif %}
	        <th>Registration Number</th>
	        <th>Position</th>
	        <th>First Name</th>
	        <th>Last Name</th>
	        {% if is_dean %}
	        <th>Status</th>
	        {% endif %}
	      </tr>
	    </thead>
	    <tbody>
	    {% for appln in applns %}
	    {% if is_dean or appln.verified %}
	    	<tr>
	    		<td>{{forloop.counter}}</td>
	    		{% if is_dean %}
		        <td>{{appln.post_in}}</td>
		        {% endif %}
	    		<td>{{appln.app_id}}</td>
	    		<td>{{appln.post_for}}</td>
	    		<td>{{appln.user.first_name}}</td>
	    		<td>{{appln.user.last_name}}</td>
	    		{% if is_dean %}
		        <td>
		           {% if appln.verified %} Verified
		           {% else %} <a class="btn" name="verify" value="{{appln.id}}" href="{% url '/scrutiny/verifyApplication' %}">Verify</a>
		           {% endif %}
		        </td>
		        {% endif %}
	    	</tr>
	    {% endif %}
	    {% endfor %}
	    </tbody>
	</table> 
</div>



<div class="copyright">
  <div style="text-align: center">Copyright &copy; NIT Warangal</div>
  <div style="text-align:center">Designed and Developed by WSDC</div>
</div>

</body>

<style type="text/css">
	.copyright {
	  background-color: #003A6A;
	  color: white;
	}
</style>