			{% csrf_token %}

			<center><input type="checkbox" name="checkbox" value="check" id="agree" /> <b>&nbsp I Agree, The information furnished by me is correct and true to the best of my knowledge.</b><br><br>
			<button type="submit" class="btn btn-success btn-lg">I agree</button></center>

			</form>
