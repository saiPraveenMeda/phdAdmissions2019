{% load staticfiles %}
<!DOCTYPE html>
<html>
<head>
	<title>PhD Admission Form</title>
	<!-- Latest compiled and minified CSS -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

	<!-- jQuery library -->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

	<!-- Latest compiled JavaScript -->
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

	<style type="text/css">
		hr{
			border: none;
    		height: 1px;
    		background-color: black;
		}
	</style>

</head>

<body>
	<center><a href="/"> <img  src="{% static 'img/HINDI2.png' %}" align="center" style="background-color:white;" height="110px" width="100%px" alt="National Institute of Technology Warangal" title="National Institute of Technology Warangal"/></a></center>

	<div class="row" style="background-color:#003A6A; color: white;">
    <div class="col-sm-4 col-sm-offset-4">
	<center><h2>PhD Admission Form</h2></center>
	</div>
	<div class="col-sm-4">
	<br>
	<center><a href="/register/signout"><button class="btn btn-primary">Logout</button></a></center>
	</div>
	<br>
    </div>

	<div class="row">
		<div class="col-sm-8 col-sm-offset-2">
			<div class="alert alert-info">
			<center>
			<b><h3>Your Application form has been submitted.</h3></b>
			<b>You can print your application form {%if isAnnexure%}and Annexures{%endif%} using the buttons given below.</b>
			</center>
			</div>
		</div>
	</div>

	<div class="row" style="margin-top:5%;">
		<div class="col-sm-4 col-sm-offset-4">
			<center>
				<a href="/print_main_application"><button class="btn btn-success" type="button">Print Application</button></a>
			</center>
			<br>
			{%if isAnnexure%}
			<center>
				<a href="/print_annexures"><button class="btn btn-success" type="button">Print Annexures</button></a>
			</center>
			<br>
			{%endif%}
			<center>
				<a href="/printAck"><button class="btn btn-success" type="button">Print Acknowledgement Receipt</button></a>
			</center>
			
		</div>
	</div>
	<br><br><br>
</body>
</html>